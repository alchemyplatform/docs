{
  "name": "docs",
  "version": "1.0.0",
  "description": "API Specs and content files for Alchemy's documentation",
  "license": "MIT",
  "scripts": {
    "dev": "fern docs dev --port 3020",
    "check-links": "fern docs broken-links",
    "fern:check": "fern check",
    "fern:preview": "fern generate --docs --preview",
    "fern:publish": "fern generate --docs",
    "generate:rest": "./scripts/generate-open-api.sh",
    "generate:rpc": "ts-node ./scripts/generate-rpc.ts",
    "generate": "pnpm run generate:rest & pnpm run generate:rpc",
    "clean": "rm -rf build",
    "validate:rest": "./scripts/generate-open-api.sh --validate-only",
    "validate:mdx": "ts-node ./scripts/validate-mdx.ts",
    "validate:rpc": "ts-node ./scripts/validate-rpc.ts",
    "validate": "pnpm run validate:rest & pnpm run validate:rpc & pnpm run validate:mdx",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm run lint:eslint & pnpm run lint:prettier & pnpm run typecheck",
    "lint:fix": "pnpm run lint:eslint:fix & pnpm run lint:prettier:fix",
    "lint:eslint": "eslint --format stylish",
    "lint:eslint:fix": "pnpm run lint:eslint --fix --quiet",
    "lint:prettier": "prettier --cache --check \"{src,scripts}/**/*.{js,jsx,ts,tsx,md,mjs,mts,json,yml,yaml}\"",
    "lint:prettier:fix": "pnpm run lint:prettier --write",
    "lint:mdx": "node ./scripts/lint-mdx.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@open-rpc/schema-utils-js": "^2.1.2",
    "fern-api": "0.57.36",
    "js-yaml": "^4.1.0",
    "json-schema-merge-allof": "^0.8.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@eslint/markdown": "^6.4.0",
    "@mdx-js/mdx": "^3.1.0",
    "@open-rpc/meta-schema": "^1.14.9",
    "@redocly/cli": "^1.34.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/js-yaml": "^4.0.9",
    "@types/json-schema-merge-allof": "^0.6.5",
    "@typescript-eslint/parser": "^8.31.0",
    "glob": "^11.0.1",
    "@types/node": "^22.14.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "3.4.2",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx": "^3.1.0",
    "remark-preset-lint-recommended": "^7.0.1",
    "vfile-reporter": "^8.1.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  }
}
